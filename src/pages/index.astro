---
import Layout from "../layouts/Layout.astro";

const siteTitle = "Indie Game Spotlight: Uncover Hidden Gems";
const siteDescription = "Discover and share your favorite indie games. Explore reviews, insights, and a vibrant community for passionate gamers and developers.";
---

<Layout title={siteTitle} description={siteDescription}>
	<section class="hero bg-accent py-16 rounded-lg">
		<div class="container mx-auto text-center">
			<h1 class="text-4xl font-bold text-primary mb-4">{siteTitle}</h1>
			<p class="text-lg text-gray-700">{siteDescription}</p>
			<img src="https://placehold.co/800x400.png" alt="Indie Game Spotlight Hero Image" data-ai-hint="A vibrant collage of indie game art." class="mt-8 rounded-lg shadow-md mx-auto"/>
		</div>
	</section>

	<section class="py-12">
		<div class="container mx-auto">
			<h2 class="text-3xl font-semibold text-primary mb-6">Reviews</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<div class="bg-white rounded-lg shadow-md p-4">
					<img src="https://placehold.co/400x200.png" alt="Game 1" data-ai-hint="Screenshot of an indie platformer game" class="rounded-lg mb-2"/>
					<h3 class="text-xl font-semibold text-gray-800">Game Title 1</h3>
					<p class="text-gray-600">A brief review snippet...</p>
					<a href="#" class="text-primary hover:text-secondary">Read More</a>
				</div>
				<div class="bg-white rounded-lg shadow-md p-4">
					<img src="https://placehold.co/400x200.png" alt="Game 2" data-ai-hint="Screenshot of an indie RPG game" class="rounded-lg mb-2"/>
					<h3 class="text-xl font-semibold text-gray-800">Game Title 2</h3>
					<p class="text-gray-600">A brief review snippet...</p>
					<a href="#" class="text-primary hover:text-secondary">Read More</a>
				</div>
				<div class="bg-white rounded-lg shadow-md p-4">
					<img src="https://placehold.co/400x200.png" alt="Game 3" data-ai-hint="Screenshot of an indie strategy game" class="rounded-lg mb-2"/>
					<h3 class="text-xl font-semibold text-gray-800">Game Title 3</h3>
					<p class="text-gray-600">A brief review snippet...</p>
					<a href="#" class="text-primary hover:text-secondary">Read More</a>
				</div>
			</div>
		</div>
	</section>

	<section class="py-12 bg-gray-50">
		<div class="container mx-auto">
			<h2 class="text-3xl font-semibold text-primary mb-6">Developer Showcase</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<div class="bg-white rounded-lg shadow-md p-6">
					<img src="https://placehold.co/600x300.png" alt="Developer 1" data-ai-hint="A developer studio's logo or game key art" class="rounded-lg mb-4"/>
					<h3 class="text-2xl font-semibold text-gray-800">Developer Studio 1</h3>
					<p class="text-gray-600">An interview snippet or behind-the-scenes content...</p>
					<a href="#" class="text-primary hover:text-secondary">Learn More</a>
				</div>
				<div class="bg-white rounded-lg shadow-md p-6">
					<img src="https://placehold.co/600x300.png" alt="Developer 2" data-ai-hint="A developer studio's logo or game key art" class="rounded-lg mb-4"/>
					<h3 class="text-2xl font-semibold text-gray-800">Developer Studio 2</h3>
					<p class="text-gray-600">An interview snippet or behind-the-scenes content...</p>
					<a href="#" class="text-primary hover:text-secondary">Learn More</a>
				</div>
			</div>
		</div>
	</section>

	<section class="py-12">
		<div class="container mx-auto">
			<h2 class="text-3xl font-semibold text-primary mb-6">Community Forum</h2>
			<p class="text-gray-700">Placeholder for community forum integration. Could include recent posts, trending topics, etc.</p>
			<img src="https://placehold.co/800x200.png" alt="Community Forum Banner" data-ai-hint="A banner image representing the community forum." class="rounded-lg shadow-md mx-auto"/>
		</div>
	</section>

	<section class="py-12 bg-gray-50">
		<div class="container mx-auto">
			<h2 class="text-3xl font-semibold text-primary mb-6">Game Jam Calendar</h2>
			<p class="text-gray-700">A calendar or list of upcoming indie game jams.</p>
			<img src="https://placehold.co/800x200.png" alt="Game Jam Calendar Banner" data-ai-hint="A banner image representing a game jam event." class="rounded-lg shadow-md mx-auto"/>
		</div>
	</section>
</Layout>