---
import type { Props as GlobalLayoutProps } from 'types';
import type { MarkdownHeading } from 'astro';

interface Props extends GlobalLayoutProps {
  headings?: MarkdownHeading[];
}

interface Props  {
	title?: string;
	description?: string;
}

const { title = `${ "Indie Game Spotlight: Uncover Hidden Gems" }`, description } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content={description}>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg">
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body class="bg-gray-100 font-sans antialiased">
	<header class="bg-white shadow-md py-4">
		<div class="container mx-auto px-4 flex items-center justify-between">
			<a href="/" class="text-2xl font-bold text-primary">Indie Game Spotlight</a>
			<nav>
				<ul class="flex space-x-6">
					<li><a href="/" class="hover:text-secondary">Home</a></li>
					<li><a href="/blog" class="hover:text-secondary">Blog</a></li>
					<li><a href="#" class="hover:text-secondary">Reviews</a></li>
					<li><a href="#" class="hover:text-secondary">Developer Showcase</a></li>
					<li><a href="#" class="hover:text-secondary">Community Forum</a></li>
					<li><a href="#" class="hover:text-secondary">Game Jam</a></li>
				</ul>
			</nav>
		</div>
	</header>

	<main class="container mx-auto py-8 px-4">
		<slot />
	</main>

	<footer class="bg-gray-800 text-white py-4 text-center">
		Â© {new Date().getFullYear()} Indie Game Spotlight: Uncover Hidden Gems
	</footer>
</body></html>